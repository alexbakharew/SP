;even-odd
(define one 1)
(define two 2)
(define million 1000000)
(define ten-thousand 10000)
(define(even-bits n)
  (cond((= n 0)one)
       ((=(remainder n two)0)
          (even-bits (quotient n two)))
       (else(odd-bits(quotient n two)))
       ))
(define(odd-bits n)
  (cond((= n 0)0)
       ((=(remainder n two)0)
          (odd-bits (quotient n two)))
       (#t(even-bits(quotient n two)))
       ))
(define(display-bin n)
  (display(remainder n two))
  (if(= n 0)0 (display-bin (quotient n two)))
       )
(define(report-results n)
  (display "Happy birthday to you!\n\t")
  (display n)(display " (decimal)\n\t")
  (display-bin n)(display "(reversed binary)\n")
  (display "\teven?\t")(display (if(=(even-bits n)1) "yes" "no"))
  (newline)
  (display "\todd?\t")(display (if(=(odd-bits n)1) "yes" "no"))
  (newline)
  0
       )
;***** Date of YOUR birthday *******
(define dd 18)
(define mm 01)
(define yyyy 1998)
;***********************************
(report-results (+ (* dd million)
                   (* mm ten-thousand)
                   yyyy))


 
